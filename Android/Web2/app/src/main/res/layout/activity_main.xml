<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:gravity="center"
            android:hint="Address"
            android:ems="10"
            android:background="@drawable/lay"
            android:id="@+id/address_" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="58dp"
            android:background="@android:color/transparent"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_search_black_24dp"
            android:id="@+id/btn"
            app:layout_constraintStart_toStartOf="@+id/address_" app:layout_constraintEnd_toEndOf="@+id/address_"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/address_"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_mic_black_24dp"
            android:id="@+id/btn1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>